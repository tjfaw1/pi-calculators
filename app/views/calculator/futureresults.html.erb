<div class="future-results">
  <div class="content">
    <div class="row justify-content-center">
      <div class="col-12">
      <h1>Future Value at <%= @growth_rate %>% Annual Growth</h1>
      <br>
      <% until @count == @years_display %>
      <ul>
      <li style="font-size: 1.4em;"><%= "#{@current_year} = $#{@property_value.round(0).to_s(:delimited)}" %></li>
      </ul>
      <% @count += 1 %>
      <% @current_year += 1 %>
      <% @property_value *= @growth_int %>
      <% end %>
      <p style="font-size: 1.2em;"><%= link_to "Run Another Calculation", future_calculator_path %></p>
      <p style="margin-top: -30px; font-size: 1.2em;"><%= link_to "Return to Home Page", root_path %></p>
      </div>
    </div>
  </div>
</div>
